{
	"name": "Aegis",
	"version": "1.0",
	"description": "Adding a new layer of security to your browser experience",
	"permissions": ["activeTab","declarativeContent","storage"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action": {
    	"default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png",
        "128": "images/128.png"
      }
    },
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
	"manifest_version": 2,
  "content_security_policy": "script-src 'self' https://www.gstatic.com/firebasejs/5.9.3/firebase.js; object-src 'self'"
}
